# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cashmoney

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# External API Configuration
MOBILE_RECHARGE_API_URL=https://api.provider.com/recharge
MOBILE_RECHARGE_API_KEY=your-recharge-api-key

BBPS_API_URL=https://api.provider.com/bbps
BBPS_API_KEY=your-bbps-api-key

AEPS_API_URL=https://api.provider.com/aeps
AEPS_API_KEY=your-aeps-api-key

DMT_API_URL=https://api.provider.com/dmt
DMT_API_KEY=your-dmt-api-key

PAYIN_API_URL=https://api.provider.com/payin
PAYIN_API_KEY=your-payin-api-key

PAYOUT_API_URL=https://api.provider.com/payout
PAYOUT_API_KEY=your-payout-api-key

TRAVEL_API_URL=https://api.provider.com/travel
TRAVEL_API_KEY=your-travel-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=uploads/

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
